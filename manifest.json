{
	"manifest_version": 2,	
	"name": "chrome-prettier",
	"description": "formates code blocks with prettier",
	"version": "1.0",
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"browser_action": {
		"default_icon": "icon.png"
	},
	"permissions": ["tabs", "http://*/*", "https://*/*", "storage"],
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["./dist/index.js"],
			"run_at": "document_end"
		}
	]
}